{
  "manifest_version": 3,
  "name": "IconScout Downloader Extension",
  "version": "1.1.0",
  "description": "Download animations and images from IconScout with ease. This extension adds download buttons to animation and image elements on IconScout.com",
  "author": "IconScout Downloader",
  "homepage_url": "https://github.com/your-repo/iconscout-downloader",
  "permissions": [
    "activeTab",
    "webRequest",
    "downloads"
  ],
  "host_permissions": [
    "https://iconscout.com/*",
    "https://*.iconscout.com/*",
    "https://*.cloudfront.net/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://iconscout.com/*"],
      "js": ["jquery-3.6.4.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["jquery-3.6.4.min.js"],
      "matches": ["https://iconscout.com/*"]
    }
  ],
  "action": {
    "default_title": "IconScout Downloader",
    "default_popup": "popup.html"
  }
} 